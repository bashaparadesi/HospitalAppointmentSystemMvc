@model IEnumerable<HospitalAppointmentSystemMvc.Models.Doctor>
@{
    ViewBag.Title = "Available Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-primary mb-4"><i class="bi bi-person-hearts"></i> Our Doctors</h2>
<p class="text-muted">"Meet the experts who care for your every heartbeat."</p>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-primary">
        <tr><th>Doctor Name</th><th>Specialization</th><th>Action</th></tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Name</td>
                <td>@doc.Specialization</td>
                <td>
                    <a href="@Url.Action("Book", "Appointment", new { id = doc.DoctorID })" class="btn btn-sm btn-success">
                        <i class="bi bi-calendar-plus"></i> Book Appointment
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
