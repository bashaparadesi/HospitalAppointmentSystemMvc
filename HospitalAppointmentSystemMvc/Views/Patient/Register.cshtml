@model HospitalAppointmentSystem.Models.Patient
@{
    ViewBag.Title = "Patient Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4"><i class="bi bi-person-plus"></i> Patient Registration</h2>
<p class="text-muted">"Your health journey starts with a single step — Register now!"</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card p-4 shadow-sm">
        <div class="mb-3">@Html.LabelFor(m => m.Name) @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })</div>
        <div class="mb-3">@Html.LabelFor(m => m.Email) @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })</div>
        <div class="mb-3">@Html.LabelFor(m => m.Password) @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })</div>
        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check2-circle"></i> Register</button>
    </div>
}
<div class="text-center mt-3">
    <a href="@Url.Action("Login", "Patient")" class="btn btn-link text-primary"><i class="bi bi-door-open"></i> Already have an account? Login</a>
</div>
