@{
    ViewBag.Title = "Patient Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-primary mb-4"><i class="bi bi-box-arrow-in-right"></i> Patient Login</h2>
<p class="text-muted">"Your well-being starts with trusted care — Login to continue."</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card p-4 shadow-sm">
        <div class="mb-3"><label>Email</label><input type="email" name="email" class="form-control" required placeholder="Enter your email" /></div>
        <div class="mb-3"><label>Password</label><input type="password" name="password" class="form-control" required placeholder="Enter password" /></div>
        <button type="submit" class="btn btn-success w-100"><i class="bi bi-box-arrow-in-right"></i> Login</button>
    </div>
}
<div class="text-center mt-3">
    <a href="@Url.Action("Register", "Patient")" class="btn btn-link text-primary"><i class="bi bi-person-plus"></i> Create New Account</a>
</div>
