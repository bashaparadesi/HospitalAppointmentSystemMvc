<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Hospital Appointment System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Segoe UI', sans-serif;
        }

        .page-container {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            margin-top: 30px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }

        footer {
            margin-top: 30px;
            color: #555;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index","Home")">
                <i class="bi bi-hospital"></i> Hospital System
            </a>
            <ul class="navbar-nav ms-auto">
                @if (Session["PatientID"] != null)
                {
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Home")"><i class="bi bi-person-hearts"></i> Doctors</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("MyAppointments","Appointment")"><i class="bi bi-clipboard2-heart"></i> My Appointments</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Patient")"><i class="bi bi-box-arrow-right"></i> Logout (@Session["PatientName"])</a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login","Patient")"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Register","Patient")"><i class="bi bi-person-plus"></i> Register</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container page-container">
        @RenderBody()
    </div>

    <footer class="text-center">
        “Healing Hands, Caring Hearts.” | &copy; @DateTime.Now.Year Hospital Appointment System
    </footer>
</body>
</html>
