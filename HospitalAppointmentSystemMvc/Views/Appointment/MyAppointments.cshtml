@model IEnumerable<HospitalAppointmentSystemMvc.Models.Appointment>
@{
    ViewBag.Title = "My Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-primary mb-4"><i class="bi bi-clipboard2-heart"></i> My Appointments</h2>
<p class="text-muted">"Every appointment is a step toward your recovery."</p>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-bordered shadow-sm bg-white">
        <thead class="table-success">
            <tr><th>Doctor Name</th><th>Specialization</th><th>Date</th><th>Time</th><th>Status</th><th>Slip</th></tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.DoctorName</td>
                    <td>@appt.Specialization</td>
                    <td>@appt.AppointmentDate</td>
                    <td>@appt.AppointmentTime</td>
                    <td>@appt.Status</td>
                    <td>
                        <a href="@Url.Action("AppointmentSlip", "Appointment", new { id = appt.AppointmentID })" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-printer"></i> Slip
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-info-circle"></i> No appointments yet.
        <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-primary ms-2"><i class="bi bi-plus-circle"></i> Book Now</a>
    </div>
}
