@model HospitalAppointmentSystemMvc.Models.Appointment
@{
    ViewBag.Title = "Appointment Slip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow p-4 bg-light">
    <h3 class="text-center text-primary mb-4"><i class="bi bi-file-earmark-medical"></i> Appointment Slip</h3>

    <div><strong>Patient Name:</strong> @Session["PatientName"]</div>
    <div><strong>Doctor ID:</strong> @Model.DoctorID</div>
    <div><strong>Appointment Date:</strong> @Model.AppointmentDate</div>
    <div><strong>Appointment Time:</strong> @Model.AppointmentTime</div>
    <div><strong>Status:</strong> Confirmed</div>

    <hr />
    <div class="text-center mt-4">
        <button class="btn btn-success" onclick="window.print()"><i class="bi bi-printer"></i> Print / Download Slip</button>
        <a href="@Url.Action("MyAppointments", "Appointment")" class="btn btn-primary ms-2"><i class="bi bi-list-check"></i> My Appointments</a>
    </div>
</div>
